#!/bin/bash
COMPOSE_BIN_PATH=/usr/local/bin/docker-compose
COMPOSE_BIN_TMP_PATH=/tmp/docker-compose
COMPOSE_VERSION_DEFAULT=v2.0.1

help() {
  echo "Usage:"
  echo "  zmicro package install docker-compose"
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  local version=$COMPOSE_VERSION_DEFAULT
  if [ "$1" = "-v" ]; then
    version=$2

    if [ -z "$version" ]; then
      log_error "version is required"
      exit 1
    fi
  fi

  if [ -f $COMPOSE_BIN_PATH ]; then
    local current_version=$(docker-compose version --short)
    if [ "$current_version" = "$version" ]; then
      log "Docker Compose ${version} has already been installed"
      exit 0
    fi
  fi

  log_info "Install Docker Compose (${version}) ..."
  
  local os_name=$(uname -s | awk '{print tolower($0)}')
  local os_arch=$(uname -m)

  if [ "$os_arch" = "arm64" ]; then
    os_arch=aarch64
  fi

  log_debug "download docker-compose(${version}) from https://github.com/docker/compose/releases/download/${version}/docker-compose-${os_name}-${os_arch}"

  curl -L "https://github.com/docker/compose/releases/download/${version}/docker-compose-${os_name}-${os_arch}" -o $COMPOSE_BIN_TMP_PATH # >> $ZMICRO_LOG_COMMON_PATH 2>&1
  if [ "$?" != "0" ]; then
    log_error "Failed to download docker-compose(${version})"
    exit 1
  fi

  chmod +x $COMPOSE_BIN_TMP_PATH

  sudo mv $COMPOSE_BIN_TMP_PATH $COMPOSE_BIN_PATH
  
  log_success "Success to install Docker Compose CLI ."
}

run() {
  core $@
}

run $@
