#!/bin/bash

help() {
  echo "Usage:"
  echo "  zpackage install <package>[@<version>]"
  echo ""
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi
  
  local name=$1
  if [ -z "$name" ]; then
    log::error "package name is requried"
    exit 1
  fi

  # @TODO
  local version=""
  if [ "$2" = "-v" ]; then
    version=$3
  fi

  if [ "$(version::at $name)" = "true" ]; then
    version=$(version::at_version $name)
    name=$(version::at_name $name)
  fi

  zpackage::run install $name $version
}

run() {
  core $@
}

run $@
