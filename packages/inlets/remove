#!/bin/bash

help() {
  echo "Usage:"
  echo "  zpackage remove inlets"
  echo ""
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi
  
  if [ "$(is_nodejs_installed)" = "false" ]; then
    zpackage install nodejs
  fi

  load_nvm

  pm_npm remove -g @cliz/inlets
}

run() {
  core $@
}

run $@
