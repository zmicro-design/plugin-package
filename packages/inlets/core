#!/bin/bash

load_nvm() {
  local NVM_DIR=$HOME/.nvm
  if [ -s "$NVM_DIR/nvm.sh" ]; then
    . "$NVM_DIR/nvm.sh" # This loads nvm
    # log_info "Load NVM ok..."
  fi
}

is_nodejs_installed() {
  load_nvm

  which node >> /dev/null 2>&1
  if [ "$?" = "0" ]; then
    echo "true"
  else
    echo "false"
  fi
}

export -f load_nvm
export -f is_nodejs_installed
