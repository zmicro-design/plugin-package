#!/bin/bash

help() {
  echo "Usage:"
  echo "  zpackage install nodejs"
  echo ""
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi
  
  local version=$1

  config_profile

  install_nvm

  install_nodejs $version

  install_packages
}

run() {
  core $@
}

run $@
