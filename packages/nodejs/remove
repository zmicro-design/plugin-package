#!/bin/bash

help() {
  echo "Usage:"
  echo "  zpackage remove nodejs"
  echo ""
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi
  
  local NVM_DIR=$PACKAGE_NODEJS_NVM_DIR
  if [ ! -d $NVM_DIR ]; then
    log_info "Nodejs has already been removed."
    exit 0
  fi

  log_info "Find nodejs in $NVM_DIR, removing ..."
  rm -rf $NVM_DIR
  log_success "Remove nodejs done."
}

run() {
  core $@
}

run $@
